@prefix mf: <http://www.w3.org/2001/sw/DataAccess/tests/test-manifest#> .
@prefix srt: <http://www.w3.org/ns/shacl-rules-test#> .
@prefix pyrl: <http://example.org/py-srl/test#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix : <#> .

<> a mf:Manifest ;
    rdfs:label "String Function Tests" ;
    rdfs:comment "Tests for string manipulation functions (STRBEFORE, STRAFTER, REGEX, etc.)" ;
    mf:entries (
        :string-functions-001
        :string-functions-002
        :string-functions-003
        :string-functions-004
        :string-functions-005
    ) .

:string-functions-001 a srt:RulesEvalTest ;
    mf:name "string-before-after" ;
    rdfs:comment "Extract substrings before/after separator" ;
    mf:action [
        srt:ruleset <string-functions-001.srl> ;
        srt:data <string-functions-001.ttl> ;
    ] ;
    mf:result <string-functions-001-result.ttl> ;
    mf:status srt:approved .

:string-functions-002 a srt:RulesEvalTest ;
    mf:name "regex-matching" ;
    rdfs:comment "Use regex functions in FILTER" ;
    mf:action [
        srt:ruleset <string-functions-002.srl> ;
        srt:data <string-functions-002.ttl> ;
    ] ;
    mf:result <string-functions-002-result.ttl> ;
    mf:status srt:approved .

:string-functions-003 a srt:RulesEvalTest ;
    mf:name "encode-uri" ;
    rdfs:comment "Encode strings for URI usage" ;
    mf:action [
        srt:ruleset <string-functions-003.srl> ;
        srt:data <string-functions-003.ttl> ;
    ] ;
    mf:result <string-functions-003-result.ttl> ;
    mf:status srt:approved .

:string-functions-004 a srt:RulesEvalTest ;
    mf:name "lang-matching" ;
    rdfs:comment "Match language tags with LANGMATCHES" ;
    mf:action [
        srt:ruleset <string-functions-004.srl> ;
        srt:data <string-functions-004.ttl> ;
    ] ;
    mf:result <string-functions-004-result.ttl> ;
    mf:status srt:approved .

:string-functions-005 a srt:RulesEvalTest ;
    mf:name "typed-literals" ;
    rdfs:comment "Create typed literals and language-tagged strings" ;
    mf:action [
        srt:ruleset <string-functions-005.srl> ;
        srt:data <string-functions-005.ttl> ;
    ] ;
    mf:result <string-functions-005-result.ttl> ;
    mf:status srt:approved .
