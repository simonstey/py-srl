@prefix mf: <http://www.w3.org/2001/sw/DataAccess/tests/test-manifest#> .
@prefix srt: <http://www.w3.org/ns/shacl-rules-test#> .
@prefix pyrl: <http://example.org/py-srl/test#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix : <#> .

<> a mf:Manifest ;
    rdfs:label "Negation Tests" ;
    rdfs:comment "Tests for NOT EXISTS (negation-as-failure) patterns" ;
    mf:entries (
        :negation-001
        :negation-002
        :negation-003
    ) .

:negation-001 a srt:RulesEvalTest ;
    mf:name "default-value" ;
    rdfs:comment "Assign default full name when not specified" ;
    mf:action [
        srt:ruleset <negation-001.srl> ;
        srt:data <negation-001.ttl> ;
    ] ;
    mf:result <negation-001-result.ttl> ;
    mf:status srt:approved .

:negation-002 a srt:RulesEvalTest ;
    mf:name "closed-world" ;
    rdfs:comment "Mark entities as inactive if not explicitly active" ;
    mf:action [
        srt:ruleset <negation-002.srl> ;
        srt:data <negation-002.ttl> ;
    ] ;
    mf:result <negation-002-result.ttl> ;
    mf:status srt:approved .

:negation-003 a srt:RulesEvalTest ;
    mf:name "unique-constraint" ;
    rdfs:comment "Detect when a person has exactly one email" ;
    mf:action [
        srt:ruleset <negation-003.srl> ;
        srt:data <negation-003.ttl> ;
    ] ;
    mf:result <negation-003-result.ttl> ;
    mf:status srt:approved .
