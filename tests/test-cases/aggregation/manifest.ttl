@prefix mf: <http://www.w3.org/2001/sw/DataAccess/tests/test-manifest#> .
@prefix srt: <http://www.w3.org/ns/shacl-rules-test#> .
@prefix pyrl: <http://example.org/py-srl/test#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix : <#> .

<> a mf:Manifest ;
    rdfs:label "Aggregation Tests" ;
    rdfs:comment "Tests for aggregation and computation functions (CONCAT, arithmetic)" ;
    mf:entries (
        :aggregation-001
        :aggregation-002
    ) .

:aggregation-001 a srt:RulesEvalTest ;
    mf:name "concat-names" ;
    rdfs:comment "Combine first and last names using CONCAT" ;
    mf:action [
        srt:ruleset <aggregation-001.srl> ;
        srt:data <aggregation-001.ttl> ;
    ] ;
    mf:result <aggregation-001-result.ttl> ;
    mf:status srt:approved .

:aggregation-002 a srt:RulesEvalTest ;
    mf:name "age-calculation" ;
    rdfs:comment "Calculate age from birth year using arithmetic" ;
    mf:action [
        srt:ruleset <aggregation-002.srl> ;
        srt:data <aggregation-002.ttl> ;
    ] ;
    mf:result <aggregation-002-result.ttl> ;
    mf:status srt:approved .
